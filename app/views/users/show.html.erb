<h2>Detalles del usuario</h2>

<dl class="dl-horizontal">
  <dt><strong>Nombre completo</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">Este usuario no está siguiendo ningún stock</p>
<% end %>

<%= link_to "Regresar", my_friends_path, class: 'btn btn-primary' %>